$(function () {
    new Highcharts.Chart({
      chart: {
          type: 'column',
          renderTo: 'total_monthly_usage' 
        },
        title: {
            text: 'Internet Data: Total Monthly Usage'
        },
        xAxis: {
         categories: <%= InternetDataUsage.total_monthly_usage[:dates] %>,
         labels: {
            rotation: -45,
            align: 'right',
            style: {
              fontSize: '10px',
              fontFamily: 'Verdana, sans-serif'
            }
          }
        },
        yAxis: {
          min: 0,
          title: {
              text: 'Usage (MB)'
          }
        },
        tooltip: {
          pointFormat: "Value: {point.y:.2f} mm"
        },
        legend: {
          enabled: false
        },
        series: [{
          name: 'Date Time',
          data:  <%= InternetDataUsage.total_monthly_usage[:usages] %>
        }]
    });
  });

